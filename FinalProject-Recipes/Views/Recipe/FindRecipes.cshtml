
@{
    ViewData["Title"] = "FindRecipe";
}
@model FinalProject_Recipes.Models.Recipe

<h1>
    Found Recipes
</h1>
<div style="align-content:center">

    @{ if (Model.meals[0] != null)
        {
            <div class="row" style="text-align:center;margin-left:120px;margin-right:100px">
                @foreach (var item in Model.meals)
                {
                    <div class="column">
                        <div class="border-style">
                            <div class="results">
                                @item.strMeal
                            </div>
                            <div>
                                <a title=" @item.strMeal" href='@Url.Action("ViewRecipe", "Recipe", item)'>
                                    <img src='@Url.Content(item.strMealThumb)' width="200" style="margin:15px; border:solid;border-color:white;border-width:10px" />
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p> Sorry, no recipes matched your search and your preferences.</p>
        }
    }

</div>

<style>

    @@import url('https://fonts.googleapis.com/css?family=Raleway&display=swap');
     h1
     {
         font-family: 'Raleway', sans-serif;
         font-weight:bold;
         text-align: center;
     }
    .border-style {
        padding-left: 10px;
        padding-right: 10px;
        text-align: center;
        font-family: 'Raleway', sans-serif;
        font-size: medium;
        border: solid;
        border-color: transparent;
        border-width: thick;
        margin: 15px;
    }
    .results
    {
        font-family: 'Raleway', sans-serif;
        font-weight: bold;
        text-transform: capitalize;
    }
    </style>